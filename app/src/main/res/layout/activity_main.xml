<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <EditText
            android:id="@+id/result2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_left_parenthesis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/left_parenthesis"
            android:textColor="@color/white"
            app:backgroundTint="@color/teal_700"
            android:onClick="operation"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_right_parenthesis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/right_parenthesis"
            app:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="operation"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_mod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/modulo"
            app:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:onClick="operation"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/add"
            app:backgroundTint="@color/purple_200"
            android:textColor="@color/white"
            android:onClick="operation"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOne"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="number"
            android:textColor="@color/white"
            android:text="@string/_1"
            app:backgroundTint="@color/purple_500" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:onClick="number"
            android:text="@string/_2"
            app:backgroundTint="@color/purple_500" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:onClick="number"
            android:text="@string/_3"
            app:backgroundTint="@color/purple_500" />

        <Button
            android:id="@+id/button_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/subtract"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_200"
            android:onClick="operation"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:textSize="30sp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:onClick="number"
            android:text="@string/_4"
            app:backgroundTint="@color/purple_500" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:onClick="number"
            android:text="@string/_5"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_500" />

        <Button
            android:id="@+id/button6"
            android:onClick="number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/_6" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/multiply"
            app:backgroundTint="@color/purple_200"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            android:onClick="operation"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:onClick="number"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_500"
            android:text="@string/_7" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_500"
            android:onClick="number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/_8" />

        <Button
            android:id="@+id/button9"
            android:onClick="number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_500"
            android:text="@string/_9" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/divide"
            app:backgroundTint="@color/purple_200"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            android:onClick="operation"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:onClick="number"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_500"
            android:text="@string/_0" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="191dp"
            android:textSize="30sp"
            android:onClick="clear"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/clear"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            app:backgroundTint="@color/purple_500" />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="@string/equals"
            app:backgroundTint="@color/purple_700"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            android:onClick="equals"/>

    </LinearLayout>

</LinearLayout>